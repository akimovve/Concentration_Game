<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginStart="16dp"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/backButton"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:background="@mipmap/back_button" />


        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_medium"
            android:text="@string/settings"
            android:textColor="@color/whiteColor"
            android:layout_marginStart="58dp"
            android:textSize="36sp" />
    </LinearLayout>


    <ImageView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/line"
        android:layout_margin="10dp"
        android:contentDescription="@string/todo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/complexity"
            android:textColor="@color/whiteColor"
            android:gravity="center"
            android:textSize="30sp"
            android:fontFamily="@font/sf_pro_medium"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollViewComplexity"
            android:scrollbars="none"
            android:minHeight="50dp"
            android:focusableInTouchMode="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="5dp"
                    android:layout_height="0dp"/>

                <Button
                    android:id="@+id/easyComplBut"
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:fontFamily="@font/sf_pro_medium"
                    android:text="@string/easy"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:backgroundTint="@color/whiteColor"/>

                <Button
                    android:id="@+id/mediumComplBut"
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:fontFamily="@font/sf_pro_medium"
                    android:text="@string/medium"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:backgroundTint="@color/whiteColor"/>

                <Button
                    android:id="@+id/hardComplBut"
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:fontFamily="@font/sf_pro_medium"
                    android:text="@string/hard"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:backgroundTint="@color/whiteColor"/>

                <View
                    android:layout_width="5dp"
                    android:layout_height="0dp"/>

            </LinearLayout>

        </HorizontalScrollView>

    </LinearLayout>


</LinearLayout>