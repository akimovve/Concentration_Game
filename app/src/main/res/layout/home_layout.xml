<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/redimage"
            android:layout_width="80dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:contentDescription="@string/app_name"
            app:srcCompat="@mipmap/focus_1" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="14dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/whiteimage"
            android:layout_width="80dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:contentDescription="@string/app_name"
            app:srcCompat="@mipmap/focus_2" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="14dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/blueimage"
            android:layout_width="80dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:contentDescription="@string/app_name"
            app:srcCompat="@mipmap/focus_3" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="14dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/greenimage"
            android:layout_width="80dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:contentDescription="@string/app_name"
            app:srcCompat="@mipmap/focus_4" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="14dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="193dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/concentrationTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/pixel_font"
            android:text="@string/concentration_title"
            android:textColor="@color/whiteColor"
            android:textSize="54sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="314dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/mainPlayButton"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@mipmap/playbutton" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/rewardsButton"
            android:layout_width="30dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@mipmap/rewardsbutton" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/gameModeButton"
            android:layout_width="35dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@mipmap/gamemodebutton" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/tableOfRecordsButton"
            android:layout_width="28dp"
            android:layout_height="41dp"
            android:layout_weight="1"
            android:background="@mipmap/tableofrecordsbutton" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/pauseButton"
            android:layout_width="25dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:background="@mipmap/settingsbutton" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>