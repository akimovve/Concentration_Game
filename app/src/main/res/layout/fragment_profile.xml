<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <RelativeLayout
        android:id="@+id/rel_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/colorSecondaryDark"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:padding="10dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="85dp" />
    </RelativeLayout>



    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:fontFamily="@font/sf_pro_bold"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:layout_below="@id/rel_layout" />

    <EditText
        android:id="@+id/enter_new_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rel_layout"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimaryDark"
        android:fontFamily="@font/sf_pro_bold"
        android:textColor="@android:color/white"
        android:textColorHint="@color/grey"
        android:textCursorDrawable="@android:color/white"
        android:textSize="30sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/ok_new_button"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_below="@id/rel_layout"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/button_background_main"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:visibility="invisible"
        android:text="@string/ok" />

    <TextView
        android:id="@+id/user_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:fontFamily="@font/sf_pro_font"
        android:layout_centerInParent="true"
        android:layout_below="@id/user_name" />

    <Button
        android:id="@+id/change_name_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/user_email"
        android:layout_centerInParent="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/button_background_main"
        android:text="@string/change_name"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <Button
        android:id="@+id/sign_out_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/change_name_button"
        android:layout_centerInParent="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/button_background_red"
        android:text="@string/sign_out"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

</RelativeLayout>